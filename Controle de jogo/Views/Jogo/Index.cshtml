@model IEnumerable<Controle_de_jogo.Models.Jogo>

@{
    ViewBag.Title = "Jogos";
}

<h2>Jogos</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Nome jogo</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOME)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.JOGOID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.JOGOID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.JOGOID })
        </td>
    </tr>
}

</table>
