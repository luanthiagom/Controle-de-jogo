@model Controle_de_jogo.Models.AmigoJogo

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Empréstimo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Data de empréstimo</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DATAEMPRESTIMO)
        </dd>

        <dt>
            <p>Nome amigo</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amigo.NOME)
        </dd>

        <dt>
            <p>Nome jogo</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jogo.NOME)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
