@model IEnumerable<Controle_de_jogo.Models.Amigo>

@{
    ViewBag.Title = "Amigos";
}

<h2>Amigos</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Nome amigo</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOME)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AMIGOID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AMIGOID }) |
